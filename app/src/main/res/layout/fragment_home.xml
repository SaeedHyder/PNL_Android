<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/banner" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/top_shelf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_popular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_right"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/popular" />


                <com.ingic.pnl.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="@string/most_popular"
                    android:textColor="@color/blue_notifications"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/Roboto" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_services"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/services" />


                <com.ingic.pnl.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="@string/services"
                    android:textColor="@color/blue_notifications"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/Roboto" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_companies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_top_right"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/icon" />


                <com.ingic.pnl.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="@string/companies"
                    android:textColor="@color/blue_notifications"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/Roboto" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_favourites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_top_left"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/img_favourite_badge"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40">

                    <ImageView
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:contentDescription="@string/favourites"
                        android:src="@drawable/favorite1" />

                    <com.ingic.pnl.ui.views.AnyTextView
                        android:id="@+id/txt_favourite_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x2"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:maxLength="2"
                        android:padding="@dimen/x3"
                        android:text="0"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/Roboto" />
                </RelativeLayout>

                <com.ingic.pnl.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="@string/favourites"
                    android:textColor="@color/blue_notifications"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/Roboto" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>