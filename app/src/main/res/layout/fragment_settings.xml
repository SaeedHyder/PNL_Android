<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/languageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal">

            <com.ingic.pnl.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x10"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:text="@string/turn_notification_on_off"
                android:textColor="@color/blue_notifications"
                android:textSize="@dimen/x16"
                app:typeface="@string/Roboto"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x10"
                android:layout_weight="0.5"
                android:gravity="center">

                <com.ingic.pnl.ui.views.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical|end"
                    android:text="On"
                    android:textColor="@color/blue_notifications"
                    app:typeface="@string/Roboto"/>

                <ToggleButton
                    android:id="@+id/toggleLanguage"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:background="@drawable/selector_toggle"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>

                <com.ingic.pnl.ui.views.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14"
                    android:gravity="center_vertical|start"
                    android:text="Off"
                    android:textColor="@color/red_notifications"
                    app:typeface="@string/Roboto"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.3"
            android:background="@color/light_grey"/>

        <com.ingic.pnl.ui.views.AnyTextView
            android:id="@+id/tv_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:drawableRight="@drawable/arrow1"
            android:gravity="center_vertical"
            android:text="@string/change_password_"
            android:textColor="@color/blue_notifications"
            android:textSize="@dimen/x16"
            app:typeface="@string/Roboto"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.3"
            android:background="@color/light_grey"/>

        <com.ingic.pnl.ui.views.AnyTextView
            android:id="@+id/edt_rate_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:drawableRight="@drawable/arrow1"
            android:gravity="center_vertical"
            android:text="@string/edit_profile"
            android:textColor="@color/blue_notifications"
            android:textSize="@dimen/x16"
            app:typeface="@string/Roboto"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.3"
            android:background="@color/light_grey"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginBottom="@dimen/x40"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/btn_red_drawable"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>