<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="?android:windowBackground"
            android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logo_nav"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@color/app_blue"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/x22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x10"
                    android:contentDescription=""
                    android:src="@drawable/home_nav"
                    tools:ignore="ContentDescription"/>

                <com.app.pnl.ui.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x12"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x22"
                    app:typeface="@string/Roboto"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_nav"/>

            <LinearLayout
                android:id="@+id/btn_notifications"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/x22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x10"
                    android:contentDescription=""
                    android:src="@drawable/notification_nav"
                    tools:ignore="ContentDescription"/>

                <com.app.pnl.ui.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x12"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/notification"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x22"
                    app:typeface="@string/Roboto"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_nav"/>

            <LinearLayout
                android:id="@+id/btn_favourites"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/x22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x10"
                    android:contentDescription=""
                    android:src="@drawable/favorite_nav"
                    tools:ignore="ContentDescription"/>

                <com.app.pnl.ui.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x12"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/favourites"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x22"
                    app:typeface="@string/Roboto"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_nav"/>

            <LinearLayout
                android:id="@+id/btn_review_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/x22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x10"
                    android:contentDescription=""
                    android:src="@drawable/review_nav"
                    tools:ignore="ContentDescription"/>

                <com.app.pnl.ui.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x12"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/review_history"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x22"
                    app:typeface="@string/Roboto"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_nav"/>

            <LinearLayout
                android:id="@+id/btn_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/x22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x10"
                    android:contentDescription=""
                    android:src="@drawable/setting_nav"
                    tools:ignore="ContentDescription"/>

                <com.app.pnl.ui.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x12"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/settings"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x22"
                    app:typeface="@string/Roboto"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_nav"/>

            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/x22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x10"
                    android:contentDescription=""
                    android:src="@drawable/logout_nav"
                    tools:ignore="ContentDescription"/>

                <com.app.pnl.ui.views.AnyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x12"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/logout"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x22"
                    app:typeface="@string/Roboto"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_nav"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>