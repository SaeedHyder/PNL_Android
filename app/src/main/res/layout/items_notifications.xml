<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/main_parent"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:alpha="0.5"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <com.ingic.pnl.ui.views.AnyTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garry Smith"
                android:textColor="@color/blue_notifications"
                android:textSize="@dimen/x14"
                app:typeface="@string/Roboto"/>

            <com.ingic.pnl.ui.views.AnyTextView
                android:id="@+id/tv_msg_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"
                app:typeface="@string/Roboto"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2">

            <com.ingic.pnl.ui.views.AnyTextView
                android:id="@+id/tv_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x7"
                android:gravity="start"
                android:text="Yesterday"
                android:textColor="@color/red_notifications"
                android:textSize="@dimen/x12"
                app:typeface="@string/Roboto"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:alpha="0.2"
        android:background="@color/light_grey"/>

</LinearLayout>